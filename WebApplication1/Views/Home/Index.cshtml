<div ng-app="IndexApp" ng-controller="IndexCtrl">
    <div id="Banner" class="row">
        <!--輪播banner-->
        <div id="carouselExampleControls" class="carousel slide col" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item" ng-class="{active:!$index}" ng-repeat="picture in PictureList">
                    <img class="d-block w-100" src="{{picture.src}}">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div id="Item" class="carousel row">
        <font class="T2 col-12">項目</font>
        <!--項目-->
        <div type="button" class="Item form-control col-1" ng-repeat="x in ItemList">
            <div class="row">
                <div class="bg-dark col-12" />
                <div class="bg-light col-12" />
            </div>
        </div>
    </div>
</div>
<link href="~/css/Index/index_web.min.css" rel="stylesheet" asp-append-version="true" />
@section Scripts
    {
    <script src="~/js/index/index.js" asp-append-version="true"></script>
    @*<script src="~/js/index/index.min.js" asp-append-version="true" ></script>*@
}


